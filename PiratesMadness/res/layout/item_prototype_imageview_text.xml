<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/prototype_image_text" >
    
	<ImageView
	    android:id="@+id/prototype_image"
	    android:layout_width="100dp"
	    android:layout_height="200dp"
	    android:contentDescription="@string/prototype_image_caharacter_text"
	    android:layout_gravity="center_horizontal"
	    android:src="@drawable/pirate1" />
	
	<TextView 
	    android:id="@+id/prototype_text"
	    android:layout_width="wrap_content"
	    android:layout_height="20dp"
	    android:background="@color/Black"
	    android:layout_gravity="center"
	    android:text="@string/prototype_text_text"
	    />
    
</LinearLayout>
