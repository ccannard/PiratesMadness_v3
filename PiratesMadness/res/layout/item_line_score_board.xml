<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:id="@+id/prototype_line_score_board">
    
    <TextView 
        android:id="@+id/id_prototype_text_name_winner"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.25"
        android:text="name winner"/>
    <TextView 
        android:id="@+id/id_prototype_text_name_looser"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.25"
        android:text="name looser"/>
    <TextView 
        android:id="@+id/id_prototype_text_time"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.25"
        android:text="time"/>
    <TextView 
        android:id="@+id/id_prototype_text_score"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.25"
        android:text="score"/>
    
</LinearLayout>
